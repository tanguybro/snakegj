<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/classement_background">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bloomer_demo"
        android:textColor="@android:color/white"
        android:text="Bienvenue dans la bataille \n Votre objectif en tant que gilet jaune est de manger les policiers pour accroître votre troupe. \n Pour vous déplacer, appuyez d'un côté ou de l'autre du gilet jaune en tête."
        android:textSize="20sp"
        android:layout_centerInParent="true"
        android:gravity="center"/>

    <Button
        android:id="@+id/btnOk"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:background="@drawable/design_button"
        android:fontFamily="@font/bloomer_demo"
        android:text="Ok"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="100dp"/>

</RelativeLayout>