<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".jeu.ModeJeu"
    android:background="@drawable/modejeu_background">

    <ImageButton
        android:id="@+id/btnRetour"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/design_button"
        android:src="@drawable/ic_retour"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:id="@+id/textview_modeJeu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mode de jeu"
        android:textColor="@android:color/white"
        android:textSize="35sp"
        android:fontFamily="@font/bloomer_demo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"/>

    <ImageButton
        android:id="@+id/image_giletJaune"
        android:layout_width="90dp"
        android:layout_height="100dp"
        android:background="@drawable/gilet_jaune"
        android:layout_below="@id/textview_modeJeu"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Révolution"
        android:textColor="@android:color/white"
        android:fontFamily="@font/bloomer_demo"
        android:textSize="20sp"
        android:layout_below="@id/image_giletJaune"
        android:layout_marginLeft="70dp"/>

    <ImageButton
        android:id="@+id/image_giletPolicier"
        android:layout_width="90dp"
        android:layout_height="100dp"
        android:background="@drawable/gilet_policier"
        android:layout_below="@id/textview_modeJeu"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        android:layout_marginBottom="20dp"
        android:layout_alignParentRight="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dissolution"
        android:textColor="@android:color/white"
        android:fontFamily="@font/bloomer_demo"
        android:textSize="20sp"
        android:layout_below="@id/image_giletJaune"
        android:layout_marginRight="70dp"
        android:layout_alignParentRight="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="D'autres modes à venir très prochainement..."
        android:textColor="@android:color/white"
        android:fontFamily="@font/bloomer_demo"
        android:textSize="25sp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"/>

</RelativeLayout>