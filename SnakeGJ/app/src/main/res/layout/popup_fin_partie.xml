<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".popup.PopupFinPartie">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/com_facebook_button_send_background_color_pressed">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Les gilets jaunes ont succombÃ©"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="@color/common_google_signin_btn_text_dark_default"
            />

        <TextView
            android:id="@+id/scoreFinal"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:text="Votre score : "
            android:textSize="20sp"
            android:textColor="@color/common_google_signin_btn_text_dark_default"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="75dp"/>

    </FrameLayout>



    <Button
        android:id="@+id/btnRejouer"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Rejouer"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="50dp"
        android:background="@drawable/common_google_signin_btn_icon_dark_normal_background"/>

    <Button
        android:id="@+id/btnQuitter"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Quitter"
        android:layout_gravity="center_horizontal|bottom"
        android:background="@drawable/common_google_signin_btn_icon_dark_normal_background"
        />



</FrameLayout>