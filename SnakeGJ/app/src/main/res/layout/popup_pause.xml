<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tableau"
    tools:context=".popup.PopupFinPartie">

    <TextView
        android:id="@+id/pause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pause"
        android:textSize="60sp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:fontFamily="@font/alarm_clock"
        android:textColor="@android:color/holo_orange_dark" />


    <Button
        android:id="@+id/btnReprendre"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="@string/reprendre"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        android:fontFamily="@font/bloomer_demo"
        android:layout_below="@id/pause"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        android:background="@drawable/design_button" />

    <Button
        android:id="@+id/btnRejouer"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="@string/rejouer"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        android:fontFamily="@font/bloomer_demo"
        android:layout_below="@id/btnReprendre"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/design_button" />

    <Button
        android:id="@+id/btnQuitter"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="@string/quitter"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        android:fontFamily="@font/bloomer_demo"
        android:layout_below="@id/btnRejouer"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/design_button" />

</RelativeLayout>